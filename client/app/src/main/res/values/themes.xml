<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- The default theme in this app will set to the light, so the user will see text in black color -->
    <style name="Theme.Interval" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <!-- the top nav bar of the app-->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- the top of the app-->
        <item name="colorPrimaryVariant">@color/black</item>
        <!-- the text color in app-->
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <!--the style for splash screen-->
    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:gravity">fill_vertical</item>=
        <item name="android:statusBarColor">@color/transpalentColor</item>
    </style>

    <!--the style for set the action bar manu to have the burger list that will use to set setting, backup, change account-->
    <style name="nothing" parent="Theme.MaterialComponents.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:gravity">fill_vertical</item>
        <item name="android:statusBarColor">@color/transpalentColor</item>
        <!-- Customize your theme here. -->
    </style>

    <!--the style for set edge of button to round-->
    <style name="roundBtn" parent="Widget.MaterialComponents.Button">
        <item name="cornerSizeTopRight">50dp</item>
        <item name="cornerSizeBottomRight">50dp</item>
        <item name="cornerSizeTopLeft">50dp</item>
        <item name="cornerSizeBottomLeft">50dp</item>
    </style>

    <!--the style for set the action bar menu to have the burger list that will use to set setting, backup, change account-->
    <style name="Theme.Interval.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- use for create top navbar with setting list-->
    <style name="Theme.Interval.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Interval.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--the style for set black background color-->
    <style name="blackBackground" parent="Theme.Interval">
        <item name="android:windowBackground">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:gravity">fill_vertical</item>=
        <item name="android:statusBarColor">@color/black</item>
    </style>
</resources>